<h2><%= t(".sign_up") %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "PrÃ©nom" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "Nom" }%>
    <%= f.input :email,
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "Email" }%>
    <%= f.input :password,
                required: true,
                hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                input_html: { autocomplete: "Mot de passe" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "Mot de passe" } %>
    <%= f.input :photo, as: :file,
                required: true,
                input_html: { autocomplete: "Votre photo", class: 'd-none', id: 'browse' },
                label_html: { class: 'btn-colloc-primary'},
                label: 'ðŸ“· Ajouter une photo' %>
  <div id="preview" class='mb-2'></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(".sign_up") %>
  </div>
<% end %>

