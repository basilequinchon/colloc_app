<div class="d-flex align-items-center justify-content-center flex-column h-100 bg-white text-center">
  <% if user_signed_in? && current_user.flat_user %>
    <h1 class='colloc-title mb-5'>Colloc'App</h1>
    <p><%= link_to 'Voir mon appartement', flat_path(current_user.flat), class: 'btn-colloc-primary' %></p>
    <p><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete %></p>
  <% elsif user_signed_in? %>
    <h1 class='colloc-title mb-5'>Colloc'App</h1>
    <p><%= link_to 'Rejoindre un appartement', new_flat_user_path, class: 'btn-colloc-primary' %></p>
    <p><%= link_to 'Créer un appartement', new_flat_path %></p>
    <p><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete %></p>
  <% else %>
    <h1 class='colloc-title mb-5'>Colloc'App</h1>
    <%= link_to "Se connecter", new_user_session_path, class: 'btn-colloc-primary' %>
  <% end %>
</div>
